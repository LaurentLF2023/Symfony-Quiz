{% extends 'base.html.twig' %}

{% block title %}Hello QuizzController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{{ form_start(form, {'action': path('app_quizz_new'), 'method': 'POST'}) }}
		{{ form_widget(form) }}
		<button type="submit">Nouveaux Quizz</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
